<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/content_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sbingo.com.constraintlayoutdemo.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/background_light" android:id="@+id/constraintLayout">

        <TextView
            android:text="收件人:con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:text="0123456789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imageView" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:text="地址：钢结构官方价格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/arrow_right"
            android:id="@+id/imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.Guideline
        android:id="@+id/centerX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="0dp"/>
    <TextView
        android:text="买买买"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" android:padding="10dp"
        android:gravity="center" android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:text="明日无货"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:padding="10dp" android:background="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView3"
        android:gravity="center"
        android:layout_width="match_parent"/>
    <ImageView
        android:layout_width="384dp"
        app:srcCompat="@android:color/holo_blue_bright"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" android:layout_height="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
    />
    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginTop="24dp"
        android:background="@android:color/background_light"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
    >

        <TextView
            android:text="备注"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" app:layout_constraintLeft_toLeftOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:layout_width="89dp"
            android:layout_height="83dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:text="Android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_marginStart="8dp" app:layout_constraintLeft_toRightOf="@+id/imageView3"
            android:layout_marginLeft="8dp" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:layout_marginTop="8dp"/>
        <TextView
            android:text="v7.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            app:layout_constraintLeft_toLeftOf="@+id/textView11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"/>
        <TextView
            android:text="无价之宝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            app:layout_constraintLeft_toLeftOf="@+id/textView11"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
        />
        <TextView
            android:text="数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" android:layout_marginTop="8dp"/>
        <ImageView
            android:layout_width="384dp"
            android:layout_height="wrap_content" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView4"
            app:layout_constraintLeft_toLeftOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
        <TextView
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView14"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginTop="8dp"/>
        <TextView
            android:text="金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            app:layout_constraintLeft_toLeftOf="@+id/textView14"
            app:layout_constraintTop_toTopOf="@+id/imageView5" android:layout_marginTop="8dp"/>
        <TextView
            android:text="100.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:layout_constraintRight_toRightOf="@+id/textView15"/>
        <ImageView
            android:layout_width="360dp"
            android:layout_height="wrap_content" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/imageView6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView16"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/et"
            android:hint="如有其他要求， 请输入"
            android:singleLine="false" android:textSize="12sp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/textView18" android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView6"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
